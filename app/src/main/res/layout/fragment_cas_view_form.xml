<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_cas_view_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin_dashboard.ui.cas_applications.CasViewForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <!--text view for heading-->
                <TextView
                    android:id="@+id/idTVHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="CAS Application Form"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/idHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:padding="3dp"
                    android:text="Personal Details"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="25sp" />

                <!--edit text for user name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="Email"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtEmail"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtEmail"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/email"
                        android:enabled="false"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtEmail"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="Phone number"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtPhnNumber"
                        style="@style/EditTextAuth"
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtEmail"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/number"
                        android:enabled="false"
                        android:inputType="phone" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/DOB"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtPhnNumber"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Birth Date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtDate"
                        style="@style/EditTextAuth"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtDate"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:enabled="false"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="396dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtDate"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Age"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtAge"
                        style="@style/EditTextAuth"
                        android:layout_width="269dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtDate"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/age"
                        android:enabled="false"
                        android:inputType="textPhonetic"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtAge"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Gender"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtGender"
                        style="@style/EditTextAuth"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtAge"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/gender"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/DOJ"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtGender"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Joining Date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtDOJ"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtGender"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/DOJ"
                        android:enabled="false"
                        android:inputType="textPhonetic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/srvarthid"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtDOJ"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Sevarth Id"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtEmpCode"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtDOJ"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/srvarthid"
                        android:enabled="false"
                        android:inputType="textPhonetic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/branch"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtEmpCode"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Branch"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtBranch"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtEmpCode"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/branch"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtBranch"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Address"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtAddress"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtBranch"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/address"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtAddress"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="State"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtState"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtAddress"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/state"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtPhnNumber"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="City"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtCity"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtState"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/city"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/taluka"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtCity"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Taluka"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtTaluka"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtCity"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/taluka"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/village"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtTaluka"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Village"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtVillage"
                        style="@style/EditTextAuth"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtTaluka"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/village"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/pincode"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtVillage"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Pincode"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtPincode"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEdtVillage"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/pincode"
                        android:enabled="false"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:padding="3dp"
                    android:text="Professional details"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/DOP"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idHeader"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Probession Date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtDOP"
                        style="@style/EditTextAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idHeader"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/DOP"
                        android:enabled="false"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/grno"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtDOP"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/gr_no"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtGRNO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idEdtDOP"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/grno"
                        android:enabled="false"
                        android:inputType="textPhonetic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idPreviousSD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:padding="3dp"
                    android:text="Previous Service Details"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/iname"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idPreviousSD"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Institute Name"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtIName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idPreviousSD"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/iname"
                        android:enabled="false"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/sd"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtDOP"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Service Start Date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtSD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idPreviousSD"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/sd"
                        android:enabled="false"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/ed"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idEdtSD"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="service End date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtED"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idEdtSD"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/ed"
                        android:enabled="false"
                        android:inputType="date" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:padding="3dp"
                    android:text="Training details"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/trainingname"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idTraining"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Training Name"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idTrainingName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTraining"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/trainingname"
                        android:enabled="false"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/sponsered"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idTrainingName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Sponsered By"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idSponseredby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idTrainingName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/sponsered"
                        android:enabled="false"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/trainingtype"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idSponseredby"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Training Type"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idTrainingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idSponseredby"
                        style="@style/EditTextAuth"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/trainingtype"
                        android:enabled="false"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/trainingstart"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/idTrainingType"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Training Start Date"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/idEdtDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextAuth"
                        android:layout_below="@id/idTrainingType"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/trainingstart"
                        android:enabled="false"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
